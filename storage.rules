rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
  
    // Default deny all reads and writes
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // Allow avatar uploads for any authenticated user to their own folder.
    // Allow public read for avatars.
    match /avatars/{userId}/{fileName} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow KYC document uploads for the specific user.
    // Disallow public read.
    match /kyc/{userId}/{fileName} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow deposit screenshot uploads for the specific user.
    // Disallow public read.
    match /deposits/{userId}/{fileName} {
       allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow game result uploads for any authenticated user involved in a battle.
    // Disallow public read.
    match /results/{battleId}/{userId}/{fileName} {
       allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
