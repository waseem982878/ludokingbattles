
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper function to check if a user is an admin (super admin or agent)
    function isAdmin(userId) {
      return exists(/databases/$(database)/documents/agents/$(userId));
    }

    // Users can only read/update their own profile.
    // Admins can read/write any user profile.
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId;
      allow read, write: if isAdmin(request.auth.uid);
      allow create: if request.auth.uid != null; // Allow user creation on signup
    }

    // Battles can be read by any authenticated user.
    // Battles can only be created/updated by authenticated users through specific functions.
    // Admins can manage all battles.
    match /battles/{battleId} {
      allow read: if request.auth.uid != null;
      allow create, update: if request.auth.uid != null; // Server-side logic handles validation
      allow write: if isAdmin(request.auth.uid);
    }

    // Transactions can only be read/updated by the user they belong to or by an admin.
    match /transactions/{transactionId} {
       allow read, create, update: if request.auth.uid == resource.data.userId || isAdmin(request.auth.uid);
       allow write: if isAdmin(request.auth.uid);
    }
    
    // Referrals can be read by the referrer or the referred user.
    // Admins can read all referral documents.
    match /referrals/{referralId} {
      allow read: if request.auth.uid == resource.data.referrerId || request.auth.uid == resource.data.referredId || isAdmin(request.auth.uid);
      allow create: if request.auth.uid != null;
      allow update: if isAdmin(request.auth.uid); // Only admins can update status
    }

    // Admins can read/write agent data.
    match /agents/{agentId} {
      allow read, write: if isAdmin(request.auth.uid);
    }
    
    // Payment UPIs can only be managed by admins.
    match /payment_upis/{upiId} {
      allow read, write: if isAdmin(request.auth.uid);
    }

    // App configuration can be read by any authenticated user.
    // Only admins can change the configuration.
    match /config/{configId} {
      allow read: if request.auth.uid != null;
      allow write: if isAdmin(request.auth.uid);
    }
  }
}
