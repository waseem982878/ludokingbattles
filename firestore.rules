rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Default deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow authenticated users to read any document.
    // Write access is controlled by server-side logic (Security Rules are not the only layer of security).
    match /{path=**}/{docId} {
       allow read: if request.auth != null;
    }

    // Allow users to create and update their own user document.
    // This is necessary for operations like setting 'lastSeen' timestamp from the client.
    match /users/{userId} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
