rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Default-deny all writes, but allow reads for any authenticated user.
    // All write/update/delete logic MUST be handled in backend/server-side code (e.g., Firebase Functions or Server Actions)
    // to ensure security and data integrity. This is a more secure pattern than complex client-side rules.
    match /{document=**} {
      allow read: if request.auth != null;
      allow write: if false; // Disallow all client-side writes by default.
    }
  }
}
